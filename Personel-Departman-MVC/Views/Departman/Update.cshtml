@using Personel_Departman_MVC.Models.Entity;
@model Departman




@{
    ViewData["Title"] = "Update";
}

<h1>Update</h1>


<form class="p-2" method="post" asp-controller="Departman" asp-action="Update">


    <div asp-validation-summary="All"></div>


    <div class="form-group">
        <label for="DepartmanName">Yeni departman ismi</label>
        <input type="text" name="DepartmanName" class="form-control" placeholder="@Model.DepartmanName" />
    </div>

    <div class="form-group my-2">
        <label for="DepartmanDescription">Açıklaması</label>
        <input type="text" name="DepartmanDescription" class="form-control" placeholder="@Model.DepartmanDescription" />
    </div>


    <button type="submit" class="btn btn-primary my-2">Kaydet</button>
</form>
<a asp-controller="Departman" asp-action="Index" class="btn btn-secondary">Geri dön</a>