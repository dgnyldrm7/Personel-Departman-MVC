
@{
    ViewData["Title"] = "Newdepartman";
}

<h5>Yeni Departman</h5>




<form class="p-2" method="post" asp-controller="Departman" asp-action="Newdepartman">

    <div asp-validation-summary="All"></div>


    <div class="form-group">
        <label for="DepartmanName">Departman adı</label>
        <input type="text" name="DepartmanName" class="form-control" placeholder="Departman" />
    </div>

    <div class="form-group my-2">
        <label for="DepartmanDescription">Departman Açıklaması</label>
        <input type="text" name="DepartmanDescription" class="form-control" placeholder="Açıklama" />
    </div>


    <button type="submit" class="btn btn-primary my-2">Kaydet</button>
</form>


<a asp-controller="Departman" asp-action="Index" class="btn btn-secondary">Geri Dön </a>


