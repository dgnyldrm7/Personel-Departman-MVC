
@{
    ViewData["Title"] = "Result";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h5>Yeni Personel</h5>

<form class="p-2" method="post" asp-controller="Personel" asp-action="Result">


    <div asp-validation-summary="All"></div>


    <div class="form-group">
        <label for="Name">İsim</label>
        <input type="text" name="Name" class="form-control" placeholder="İsim" />
    </div>

    <div class="form-group my-2">
        <label for="lName">Soy isim</label>
        <input type="text" name="lName" class="form-control" placeholder="Soy isim" />
    </div>

    <div class="form-group my-2">
        <label for="Email">Email</label>
        <input type="email" name="Email" class="form-control" placeholder="Email" />
    </div>

    <div class="form-group my-2">
        <label for="Password">Şifre</label>
        <input type="password" name="Password" class="form-control" placeholder="Şifre" />
    </div>

    <div class="form-group my-2">
        <label for="ConfirmPassword">Şifre Doğrulama</label>
        <input type="password" name="ConfirmPassword" class="form-control" placeholder="Şifre Doğrulama" />
    </div>

    <div class="form-group my-2">
        <label for="DepartmanId">Departman</label>
        <select class="form-control" id="DepartmanId" name="DepartmanId">
            <option value="2">Financa</option>
            <option value="1">Marketing</option>
            <option value="" selected>Seçiniz</option>

        </select>
    </div>

    <button type="submit" class="btn btn-primary my-2">Kaydet</button>
</form>
<a asp-controller="Personel" asp-action="Anasayfa" class="btn btn-secondary">Geri Dön </a>